import java.util.Scanner;
public class HelloWorld{

     public static void main(String []args){
        int a,i,s=0;
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the limit");
        a=sc.nextInt();
        while(a>0)
        {
            s=s+a;
            a--;
        }
        System.out.println(s);
       
}
}
